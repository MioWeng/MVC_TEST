@model IEnumerable<MVC_TEST.Models.Employees>

@{
    ViewBag.Title = "首頁";
}

<h2>首頁</h2>

<p>
    @Html.ActionLink("建立新人員", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adderess)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cancel)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adderess)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cancel)
        </td>
        <td>
            @if (item.Cancel == false)
            {
                @Html.ActionLink("編輯", "Edit", new { id = item.ID })<span>|</span>
                @Html.ActionLink("註銷", "Delete", new { id = item.ID })
            }
        </td>
    </tr>
}

</table>
